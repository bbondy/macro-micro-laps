<resources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">
  <properties>
    <property id="enable_custom_targets" type="boolean">false</property>
    <property id="target_time_minutes" type="number">59</property>
    <property id="target_time_seconds" type="number">59</property>
    <property id="target_distance_thousandths" type="number">4167</property>
    <property id="target_distance_unit" type="number">0</property>
    <property id="double_tap_threshold_seconds" type="number">3</property>
  </properties>

  <settings>
    <setting propertyKey="@Properties.enable_custom_targets" title="@Strings.EnableCustomTargets">
      <settingConfig type="boolean" />
    </setting>

    <setting propertyKey="@Properties.target_time_minutes" title="@Strings.TargetTimeMinutes">
      <settingConfig type="numeric" min="1" max="180" />
    </setting>

    <setting propertyKey="@Properties.target_time_seconds" title="@Strings.TargetTimeSeconds">
      <settingConfig type="numeric" min="0" max="59" />
    </setting>

    <setting propertyKey="@Properties.target_distance_thousandths" title="@Strings.TargetDistanceValue">
      <settingConfig type="numeric" min="1000" max="20000" />
    </setting>

    <setting propertyKey="@Properties.target_distance_unit" title="@Strings.TargetDistanceUnit">
      <settingConfig type="list">
        <listEntry value="0">@Strings.UnitMiles</listEntry>
        <listEntry value="1">@Strings.UnitKilometers</listEntry>
      </settingConfig>
    </setting>

    <setting propertyKey="@Properties.double_tap_threshold_seconds" title="@Strings.DoubleTapThresholdSeconds">
      <settingConfig type="numeric" min="1" max="10" />
    </setting>
  </settings>
</resources>
